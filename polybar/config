secondary = #e60053
alert = #ff6600

high = #268bd2
high-alt = #0c2b41

[bar/topbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 3%
;offset-x = 1%
;offset-y = 5%
radius = 0
fixed-center = true

dpi = -1
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

