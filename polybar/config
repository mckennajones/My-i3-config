module-margin-right = 2

font-0 = Noto Sans UI:size=11:weight=Regular
font-1 = FontAwesome:size=11;0
font-2 = San Francisco Display:size=11:weight=bold
font-3 = San Francisco Display:size=11:weight=Regular

modules-left = powermenu i3
modules-center = time
modules-right = spotify volume xbacklight wlan battery cpu memory filesystem date

tray-position = right
tray-padding = 2
tray-scale = 1.0
